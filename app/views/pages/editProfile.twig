							<div class="checkbox">
								<label><input type="checkbox" name="hobbies[]" value="hide" {% if "hide" in user.hobbies %} checked {% endif %}>Hide in dark swarms</label>
							</div>
						{% if flash.errors.hobbies %}
							<span class="help-block">{{ flash.errors.hobbies }}</span>
						{% endif %}
					</div>

				</div>
			</div>

